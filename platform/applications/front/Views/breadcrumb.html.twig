
        <div class="row">
            <div class="column">

                <div class="ui breadcrumb">

{% set i = 1 %}
{% for breadcrumb in breadcrumbs %}
    {% if i < n %}
                    <a href="{{ breadcrumb['url'] }}" class="section">{% if breadcrumb['icon'] is not empty %}<i class="{{ breadcrumb['icon']|e('html_attr') }}"></i>{% endif %}{{ breadcrumb['raw'] ? breadcrumb['name']|raw : breadcrumb['name'] }}</a>
                    <span class="divider">/</span>
    {% else %}
                    <div class="active section">{% if breadcrumb['icon'] is not empty %}<i class="{{ breadcrumb['icon']|e('html_attr') }}"></i>{% endif %}{{ breadcrumb['raw'] ? breadcrumb['name']|raw : breadcrumb['name'] }}</div>
    {% endif %}
    {% set i = i + 1 %}
{% endfor %}

                </div>

            </div>
        </div>

